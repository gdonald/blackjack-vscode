{
  "publisher": "greg-donald",
  "name": "blackjack",
  "displayName": "Blackjack",
  "description": "Play Blackjack in VSCode",
  "version": "1.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gdonald/blackjack-vscode.git"
  },
  "files": [
    "dist/**/*",
    "icon.png",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blackjack.playGame",
        "title": "Blackjack: Play",
        "icon": "$(symbol-misc)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "blackjack.playGame"
        }
      ]
    },
    "keybindings": [
      {
        "command": "blackjack.playGame",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
